@model Heritage.Models.Endereco

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}
<div class="span9">
    @Html.ActionLink("Página Inicial", "Index")
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="head">
            <div class="isw-documents"></div>
            <h2>Alterar Endereço: @Model.Descricao</h2>
            <div class="clear"></div>
        </div>

        @using (Html.BeginForm())
        {
            <div class="block-fluid">
                @Html.ValidationSummary(true)


                @Html.HiddenFor(model => model.Id_Endereco)

                <div class="row-form">
                    <div class="span2">
                        @Html.LabelFor(model => model.Descricao)
                    </div>
                    <div class="span9">
                        @Html.EditorFor(model => model.Descricao)
                        @Html.ValidationMessageFor(model => model.Descricao)
                    </div>
                    <div class="clear"></div>
                </div>

                <div class="row-form">
                    <div class="span2">
                        @Html.LabelFor(model => model.CEP)
                    </div>
                    <div class="span9">
                        @Html.EditorFor(model => model.CEP)
                        @Html.ValidationMessageFor(model => model.CEP)
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        @Html.LabelFor(model => model.IdBairro, "Bairro:")
                    </div>
                    <div class="span9">
                        @Html.DropDownListFor(model => model.IdBairro.Id_Bairro, (IEnumerable<SelectListItem>)ViewBag.Bairro, "Selecione Bairro")@Html.ActionLink("Novo Bairro", "Create", "Bairro")
                        @Html.ValidationMessageFor(model => model.IdBairro)
                    </div>
                    <div class="clear"></div>
                </div>

                <div class="row-form">
                    <div class="span2">
                        <input type="submit" class="btn btn-success" value="Salvar" />
                        <input type="reset" class="btn btn-warning" value="Limpar" />

                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>
