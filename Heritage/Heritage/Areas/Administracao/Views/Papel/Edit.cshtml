@model Heritage.Models.Papel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}
<div class="span9">
    @Html.ActionLink("Página Inicial", "Index")
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="head">
            <div class="isw-documents"></div>
            <h2>Alterar Papel: @Model.Nome</h2>
            <div class="clear"></div>
        </div>
        @using (Html.BeginForm())
        {
            <div class="block-fluid">
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.Id_Papel)

                <div class="row-form">
                    <div class="span2">
                        @Html.LabelFor(model => model.Nome)
                    </div>
                    <div class="span9">
                        @Html.TextBoxFor(model => model.Nome, new { placeholder = "Digite o nome do responsável.", @class = "input-xlarge", maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.Nome)
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="row-form">
                    <div class="span2">
                        <input type="submit" class="btn btn-success" value="Salvar" />
                        <input type="reset" class="btn btn-warning" value="Limpar" />
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
    
        }

    </div>
</div>
