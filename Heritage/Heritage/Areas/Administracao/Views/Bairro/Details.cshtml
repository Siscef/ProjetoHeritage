}

<h3>Detalhes do Bairro: @Model.Nome</h3>

<table class="table table-bordered">
    <tr>

        <th>
            @Html.LabelFor(model => model.Id_Bairro)
        </th>
        <th>
            @Html.LabelFor(model => model.Nome)
        </th>  
         <th>
           Cidade:
        </th>  
          <th>
