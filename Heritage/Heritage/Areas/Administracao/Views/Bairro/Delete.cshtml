@model Heritage.Models.Bairro

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}
<div class="span9">
    <h3>Excluir Bairro: @Model.Nome</h3>
</div>

<div class="span9">
    <h3>@User.Identity.Name, você tem certeza que deseja excluir esse registro?</h3>
</div>
@using (Html.BeginForm())
{
    <fieldset>
        <div class="span9">
            <legend>Bairro</legend>
        </div>

        @Html.HiddenFor(model => model.Id_Bairro)
        @Html.HiddenFor(model => model.Nome)
        <div class="span9">
            @Html.LabelFor(model => model.Id_Bairro)
        </div>
        <div class="span9">
            @Html.DisplayFor(model => model.Id_Bairro)
        </div>

        <div class="span9">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="span9">
            @Html.DisplayFor(model => model.Nome)
        </div>
    </fieldset>

    <div class="span9">
        <input class="btn btn-danger" type="submit" value="Delete" />|
        @Html.ActionLink("Página Inicial", "Index")
    </div>
       
    
}
