                    <h1>Tabela Deprecição do Bem </h1>
                    <div class="clear"></div>
                </div>
                <div class="block-fluid table-sorting">
                    <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" name="checkall" /></th>

                                <th width="25%">Data:</th>
                                <th width="25%">Valor Pis:</th> 
                                <th width="25%">Valor Depreciado</th>                               
                                <th width="25%">Valor Cofins:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <h4>@ViewBag.NomeBem</h4>
                            <h6> Soma Valor Depreciado: @Math.Round(Model.Sum(model => model.ValorDepreciado),3)</h6>
                            <h6> Soma Valor Pis: @Math.Round(Model.Sum(model => model.ValorPis),3)</h6>
                            <h6> Soma Valor Cofins: @Math.Round(Model.Sum(model => model.ValorCofins),3)</h6>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="checkbox" /></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataDepreciacaoBem)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ValorPis)
                                    </td>
                                     <td>
                                        @Html.DisplayFor(modelItem => item.ValorDepreciado)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ValorCofins)
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
