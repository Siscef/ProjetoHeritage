@model Heritage.Models.Cidade

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}
<div class="span9">
    <h2>Excluir Cidade: @Model.Nome</h2>
</div>

<div class="span9">
<h3>@User.Identity.Name, você tem certeza que deseja excluir esse registro?</h3>
</div>
@using (Html.BeginForm()) {

<fieldset>
    <div class="span9">
            <legend>Cidade</legend>
    </div>

    @Html.HiddenFor(model => model.Id_Cidade)

    <div class="span9">
         @Html.DisplayNameFor(model => model.Id_Cidade)
    </div>
    <div class="span9">
        @Html.DisplayFor(model => model.Id_Cidade)
    </div>

    <div class="span9">
         @Html.DisplayNameFor(model => model.Nome)
    </div>
    <div class="span9">
        @Html.DisplayFor(model => model.Nome)
    </div>
</fieldset>

  <div class="span9">
        <input class="btn btn-danger" type="submit" value="Delete"/>|
        @Html.ActionLink("Página Inicial", "Index")
    </div>
}
