@model Heritage.Models.TrocarSenha
@{
    ViewBag.Title = "TrocarSenha";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}

<<div class="span9">
    @Html.ActionLink("Página Inicial", "Index")
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="head">
            <div class="isw-documents"></div>
            <h2>Alterar Senha</h2>
            <div class="clear"></div>
        </div>

        @using (Html.BeginForm())
        {
            <div class="block-fluid">
                @Html.ValidationSummary(true)


                <div class="row-form">
                    <div class="span2">
                        @Html.LabelFor(model => model.SenhaAtual)
                    </div>
                    <div class="span9">
                        @Html.EditorFor(model => model.SenhaAtual)
                        @Html.ValidationMessageFor(model => model.SenhaAtual)
                    </div>
                    <div class="clear"></div>
                </div>


                <div class="row-form">
                    <div class="span2">
                        @Html.LabelFor(model => model.NovaSenha)
                    </div>
                    <div class="span9">
                        @Html.EditorFor(model => model.NovaSenha)
                        @Html.ValidationMessageFor(model => model.NovaSenha)
                    </div>
                    <div class="clear">
                    </div>
                </div>


                <div class="row-form">
                    <div class="span2">
                        @Html.LabelFor(model => model.ConfirmaSenha)
                    </div>
                    <div class="span9">
                        @Html.EditorFor(model => model.ConfirmaSenha)
                        @Html.ValidationMessageFor(model => model.ConfirmaSenha)
                    </div>
                    <div class="clear"></div>
                </div>


                <div class="row-form">
                    <div class="span2">
                        <input type="submit" class="btn btn-success" value="Salvar" />
                        <input type="reset" class="btn btn-warning" value="Limpar" />
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        }


    </div>
</div>
