@model Heritage.Models.Categoria

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}
<div class="span9">
    <h3>Excluir categoria: @Model.Nome</h3>
</div>

<div class="span9">
    <h4>@User.Identity.Name, você tem certeza que deseja excluir esse registro?</h4>
</div>
@using (Html.BeginForm())
{
    
    <fieldset>
        <div class="span9">
            <legend>Categoria</legend>
        </div>
        @Html.HiddenFor(model => model.Id_Categoria)
        @Html.HiddenFor(model => model.Nome)

        <div class="span9">
            @Html.LabelFor(model => model.Id_Categoria)
        </div>
        <div class="span9">
            @Html.DisplayFor(model => model.Id_Categoria)
        </div>

        <div class="span9">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="span9">
            @Html.DisplayFor(model => model.Nome)
        </div>
    </fieldset>

    <div class="span9">
        <input class="btn btn-danger" type="submit" value="Delete" />|
        @Html.ActionLink("Página Inicial", "Index")
    </div>
}
